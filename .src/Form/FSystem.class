'' NOTA
'' Check paths and libraries according to your Linux version.

W As Integer = MCtl.W
H As Integer = MCtl.H
FONT_COLOR As Integer = MCtl.FONT_COLOR
BACKGROUND_COLOR As Integer = MCtl.BACKGROUND_COLOR
Settings_Theme As New Settings(Desktop.ConfigDir &/ "CPU-Info" &/ "CPU-Info.conf")

Public Sub _new()
  
End

Public Sub Form_Open()
  
  Application.Animations = True
  With FSystem
    .w = W
    .H = H
    .Text = Application.Name
    .Foreground = FONT_COLOR
    .Background = BACKGROUND_COLOR
    .Arrangement = Arrange.Vertical
    ' .Border = False
    .Padding = 2
    .Spacing = True
    .Move(0, 0)
    .Show
    .Sticky = True
    .Stacking = Window.Normal
    .TakeFocus = True
  End With
  
End

Public Sub mnuAbout_Click()
  
  FAbout.ShowModal
  
End

Public Sub mnuFull_Click()
  
  Settings_Theme.Write(FSystem)
  Settings_Theme["Theme/iFull"] = "1"
  Settings_Theme.Save
  
End

Public Sub mnuBasic_Click()
  
  Settings_Theme.Write(FSystem)
  Settings_Theme["Theme/iFull"] = "0"
  Settings_Theme.Save
  Settings_Theme.Reload
  Me.Close
  FSystemMini.Show
  
End

Public Sub mnuClose_Click()
  
  Me.Close
  
End

Public Sub Form_KeyPress()
  
  If Key.Code = Key.Esc Then
    Me.Close
  Endif
  
End
