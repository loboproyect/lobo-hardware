sEmail As String = "lobodesktop@gmail.com"

Public Sub lblSub_MouseDown()
  
End

Public Sub Form_Open()
  
  txtto.Text = sEmail
  txtSubject.Text = Application.Title & Space(1) & "error"
  txtSubject.SetFocus
  txtmsg.Text = ("Body")
  
End

Public Sub btnSend_Click()
  
  Dim $To As New String[]
  Dim sSub As String = txtSubject.Text
  Dim sMSG As String = txtmsg.Text
  
  $To.Add(sEmail)
  
  If IsNull(sSub) Or IsNull(sMSG)
    Message.Title(Application.Title)
    Message.Info(MMSG.MSG_EMPTY_FIELDS) 
  Else
    Desktop.SendMail($To,,, sSub, sMSG, Null) 
  Endif
  
Catch
  'LoboLog.Add(Now, subLog.ERROR_GRAVE, Error.Text, Error.Where, Error.Code)
  Message.Error(Error.Text & gb.NewLine & Error.Where)
  
End

Public Sub btnClose_Click()
  
  Me.Close
  
End

Public Sub Form_KeyPress()
  
  If Key.Code = Key.Esc Then
    Me.Close
  Endif
  
End

Public Sub txtMSG_KeyPress()
  
End
